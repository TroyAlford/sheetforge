{
  "name": "sheetforge",
  "description": "SheetForge - a React-based RPG Character Sheets",
  "version": "0.2.1",
  "license": "ISC",
  "author": "Troy Alford",
  "main": "build/sheetforge.min.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/TroyAlford/sheetforge.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "directory-named-webpack-plugin": "^4.0.0",
    "docz": "^0.11.2",
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-import-order-alphabetical": "^0.0.1",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "fibers": "^3.0.0",
    "jest-cli": "^23.4.1",
    "jest-css-modules": "^1.1.0",
    "jest-directory-named-resolver": "^0.0.1",
    "mini-css-extract-plugin": "^0.4.3",
    "mobx": "^5.0.3",
    "mobx-react": "^5.2.3",
    "mobx-state-tree": "^3.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "rimraf": "^2.6.2",
    "sass": "^1.14.0",
    "sass-loader": "^7.0.3",
    "source-map-explorer": "^1.5.0",
    "style-loader": "^0.23.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0",
    "webpack-merge": "^4.1.4"
  },
  "peerDependencies": {
    "mobx": "^5.0.3",
    "mobx-react": "^5.2.3",
    "mobx-state-tree": "^3.0.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "scripts": {
    "deploy-storybook": "yarn storybook ",
    "build": "rimraf ./build/* && (yarn webpack & cross-env NODE_ENV=production yarn webpack)",
    "postversion": "git push origin HEAD && git push origin HEAD --tags",
    "preversion": "yarn build && git add -A ./build",
    "sourcemap": "source-map-explorer ./build/sheetforge.min.js",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "source/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/source/$1"
    },
    "resolver": "jest-directory-named-resolver",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react/",
      "<rootDir>/node_modules/react-dom/",
      "<rootDir>/node_modules/react-addons-test-utils/",
      "<rootDir>/node_modules/lodash/"
    ],
    "verbose": true
  },
  "dependencies": {
    "deep-equal": "^1.0.1"
  }
}
