{
  "name": "SheetForge",
  "description": "SheetForge - a CSS/JS library for RPG Character Sheets",
  "version": "0.1.0",
  "license": "ISC",
  "author": "Troy Alford",
  "repository": {
    "type": "git",
    "url": "https://github.com/TroyAlford/sheetforge.git"
  },
  "devDependencies": {},
  "dependencies": {
    "babel-jest": "^18.0.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-jest": "^18.0.0",
    "babel-preset-react": "^6.16.0",
    "express": "^4.13.1",
    "jest-cli": "^18.1.0",
    "lodash": "^4.17.4",
    "node-sass": "^4.3.0",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-autobind": "^1.0.6",
    "react-dom": "^15.4.2"
  },
  "scripts": {
    "test": "./node_modules/jest-cli/bin/jest.js"
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react/",
      "<rootDir>/node_modules/react-dom/",
      "<rootDir>/node_modules/react-addons-test-utils/",
      "<rootDir>/node_modules/lodash/"
    ],
    "verbose": true
  }
}
