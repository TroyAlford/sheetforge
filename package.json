{
  "name": "sheetforge",
  "description": "SheetForge - a CSS/JS library for RPG Character Sheets",
  "version": "0.2.1",
  "license": "ISC",
  "author": "Troy Alford",
  "main": "build/sheetforge.min.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/TroyAlford/sheetforge.git"
  },
  "devDependencies": {
    "@storybook/react": "^3.4.8",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.0",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-jest": "^23.2.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^1.0.0",
    "eslint": "^4.19.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "jest-cli": "^23.4.1",
    "jest-css-modules": "^1.1.0",
    "mobx": "^5.0.3",
    "mobx-react": "^5.2.3",
    "mobx-state-tree": "^3.0.0",
    "node-sass": "^4.9.2",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "sass-loader": "^7.0.3",
    "source-map-explorer": "^1.5.0",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^3.11.0"
  },
  "peerDependencies": {
    "mobx": "^5.0.3",
    "mobx-react": "^5.2.3",
    "mobx-state-tree": "^3.0.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "scripts": {
    "deploy-storybook": "yarn storybook ",
    "build": "yarn webpack",
    "build-prod": "NODE_ENV=production yarn build",
    "build-docs": "SOURCEMAP=false STORYBOOK=true build-storybook -c .storybook -o ./docs",
    "postversion": "git push origin HEAD && git push origin HEAD --tags",
    "preversion": "yarn build & yarn build-prod & yarn build-docs && git add -A ./build ./docs",
    "sourcemap": "SOURCEMAP=true yarn build && source-map-explorer ./build/sheetforge.min.js",
    "storybook": "STORYBOOK=true start-storybook -p 9001 -c .storybook",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "source/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/source/$1"
    },
    "transform": {
      ".*": "<rootDir>/node_modules/jest-css-modules"
    },
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react/",
      "<rootDir>/node_modules/react-dom/",
      "<rootDir>/node_modules/react-addons-test-utils/",
      "<rootDir>/node_modules/lodash/"
    ],
    "verbose": true
  }
}
