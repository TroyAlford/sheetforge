{
  "name": "sheetforge",
  "description": "SheetForge - a React-based RPG Character Sheets",
  "version": "2.1.9",
  "license": "ISC",
  "author": "Troy Alford",
  "main": "build/sheetforge.min.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/TroyAlford/sheetforge.git"
  },
  "dependencies": {
    "deep-equal": "^1.0.1",
    "deepmerge": "^3.2.0",
    "mathjs": "^5.10.3",
    "observable-slim": "^0.1.5",
    "sortablejs": "^1.9.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/parser": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.4.4",
    "@babel/runtime-corejs3": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^3.2.0",
    "concurrently": "^4.1.0",
    "core-js": "^3.0.1",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "directory-named-webpack-plugin": "^4.0.1",
    "docz": "^1.2.0",
    "docz-theme-default": "^1.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-import-order-alphabetical": "^0.0.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "fibers": "^4.0.1",
    "file-loader": "^3.0.1",
    "find": "^0.3.0",
    "jest-cli": "^24.8.0",
    "jest-css-modules": "^2.0.0",
    "jest-directory-named-resolver": "^0.3.0",
    "mini-css-extract-plugin": "^0.6.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^2.6.3",
    "sass": "^1.20.1",
    "sass-loader": "^7.1.0",
    "source-map-explorer": "^1.8.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-merge": "^4.2.1"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "resolutions": {
    "@babel/core": "^7.4.4",
    "@babel/generator": "^7.4.4",
    "@babel/parser": "^7.4.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "scripts": {
    "build-dev": "cross-env NODE_ENV=development yarn webpack ",
    "build-prod": "cross-env NODE_ENV=production yarn webpack ",
    "build": "concurrently -n dev,prod,docs -c yellow,red,cyan \"yarn build-dev\" \"yarn build-prod\" \"yarn docz build\"",
    "clean": "rimraf ./build/* ./docs/*",
    "develop": "concurrently -n dev,prod,docs -c yellow,red,cyan \"yarn build-dev --watch\" \"yarn build-prod --watch\" \"yarn docz dev\"",
    "postversion": "git push origin HEAD && git push origin HEAD --tags",
    "prebuild": "yarn clean",
    "preversion": "yarn test && yarn build && git add -A ./build ./docs",
    "sourcemap": "source-map-explorer ./build/sheetforge.min.js",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "source/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js",
      "@/(.*)$": "<rootDir>/source/$1"
    },
    "resolver": "jest-directory-named-resolver",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react/",
      "<rootDir>/node_modules/react-dom/",
      "<rootDir>/node_modules/react-addons-test-utils/",
      "<rootDir>/node_modules/lodash/"
    ],
    "verbose": true,
    "watchPathIgnorePatterns": [
      "<rootDir>/.*\\.json",
      "<rootDir>/build",
      "<rootDir>/docs"
    ]
  }
}
