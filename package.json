{
  "name": "sheetforge",
  "description": "SheetForge - a CSS/JS library for RPG Character Sheets",
  "version": "0.1.3",
  "license": "ISC",
  "author": "Troy Alford",
  "main": "build/sheetforge.min.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/TroyAlford/sheetforge.git"
  },
  "devDependencies": {
    "@storybook/react": "^3.3.9",
    "@storybook/storybook-deployer": "^2.3.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.0.6",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-jest": "^22.0.6",
    "babel-preset-react": "^6.16.0",
    "css-loader": "^0.28.8",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "jest-cli": "^22.0.6",
    "jest-css-modules": "^1.1.0",
    "node-sass": "^4.3.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "sass-loader": "^6.0.6",
    "source-map-explorer": "^1.5.0",
    "style-loader": "^0.19.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.11.0"
  },
  "peerDependencies": {
    "mobx": "^3.4.1",
    "mobx-react": "^4.3.5",
    "mobx-state-tree": "^1.3.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "scripts": {
    "deploy-storybook": "STORYBOOK=true storybook-to-ghpages",
    "build": "yarn webpack",
    "build-prod": "NODE_ENV=production yarn build",
    "preversion": "yarn build & yarn build-prod",
    "sourcemap": "SOURCEMAP=true yarn build && source-map-explorer ./build/sheetforge.min.js",
    "storybook": "STORYBOOK=true start-storybook -p 9001 -c .storybook",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "source/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/source/$1"
    },
    "transform": {
      ".*": "<rootDir>/node_modules/jest-css-modules"
    },
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react/",
      "<rootDir>/node_modules/react-dom/",
      "<rootDir>/node_modules/react-addons-test-utils/",
      "<rootDir>/node_modules/lodash/"
    ],
    "verbose": true
  }
}
